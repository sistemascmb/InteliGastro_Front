# ============================================================================
# CONFIGURACIÓN DE VARIABLES DE ENTORNO - SISTEMA CLÍNICO INTELLIGASTRO
# ============================================================================

# Copiar este archivo como .env y ajustar los valores según el entorno

# ============================================================================
# CONFIGURACIÓN DE API
# ============================================================================

# URL base del backend (sin barra al final)
 REACT_APP_API_URL=http://26.41.173.127:8090/api
#REACT_APP_API_URL=https://localhost:7299/api
# Deshabilitar CORS warnings temporalmente
DANGEROUSLY_DISABLE_HOST_CHECK=true
GENERATE_SOURCEMAP=false

# Versión de la API
REACT_APP_API_VERSION=v1

# Timeout de peticiones en milisegundos
REACT_APP_API_TIMEOUT=10000

# Número de reintentos automáticos
REACT_APP_RETRY_ATTEMPTS=3

# Retraso entre reintentos en milisegundos
REACT_APP_RETRY_DELAY=1000

# ============================================================================
# CONFIGURACIÓN DE AUTENTICACIÓN
# ============================================================================

# Tiempo de expiración de token en minutos
REACT_APP_TOKEN_EXPIRY=60

# Tiempo de expiración de refresh token en días
REACT_APP_REFRESH_TOKEN_EXPIRY=7

# Clave para encriptar tokens en localStorage (opcional)
REACT_APP_STORAGE_KEY=clinic_auth

# ============================================================================
# CONFIGURACIÓN DE APLICACIÓN
# ============================================================================

# Nombre de la aplicación
REACT_APP_NAME="InteliGastro - Sistema Clínico"

# Versión de la aplicación
REACT_APP_VERSION=1.0.0

# Entorno de ejecución
REACT_APP_ENVIRONMENT=development

# Habilitar logs detallados
REACT_APP_DEBUG=true

# ============================================================================
# CONFIGURACIÓN DE CARACTERÍSTICAS
# ============================================================================

# Habilitar modo offline (PWA)
REACT_APP_OFFLINE_MODE=false

# Habilitar notificaciones push
REACT_APP_PUSH_NOTIFICATIONS=false

# Habilitar reportes automáticos de errores
REACT_APP_ERROR_REPORTING=false

# ============================================================================
# CONFIGURACIÓN DE INTEGRATIONS EXTERNAS
# ============================================================================

# Google Analytics ID (opcional)
REACT_APP_GA_ID=

# Sentry DSN para reporte de errores (opcional)
REACT_APP_SENTRY_DSN=

# URL de WebSocket para notificaciones en tiempo real (opcional)
REACT_APP_WS_URL=ws://localhost:8000/ws

# ============================================================================
# CONFIGURACIÓN DE ARCHIVOS Y UPLOADS
# ============================================================================

# Tamaño máximo de archivo en MB
REACT_APP_MAX_FILE_SIZE=10

# Tipos de archivo permitidos (separados por coma)
REACT_APP_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# URL para servir archivos estáticos
REACT_APP_FILES_URL=http://localhost:8000/api/v1/files

# ============================================================================
# CONFIGURACIÓN DE PAGINACIÓN
# ============================================================================

# Número de elementos por página por defecto
REACT_APP_DEFAULT_PAGE_SIZE=10

# Tamaños de página disponibles
REACT_APP_PAGE_SIZE_OPTIONS=5,10,25,50,100

# ============================================================================
# CONFIGURACIÓN DE CACHÉ
# ============================================================================

# Tiempo de caché para listas en minutos
REACT_APP_CACHE_DURATION=5

# Habilitar caché de respuestas
REACT_APP_ENABLE_CACHE=true

# ============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# ============================================================================

# Habilitar HTTPS (en producción)
HTTPS=false

# CSP (Content Security Policy) - solo en producción
REACT_APP_CSP_ENABLED=false

# ============================================================================
# CONFIGURACIÓN ESPECÍFICA DE CLÍNICA
# ============================================================================

# Código de país por defecto
REACT_APP_DEFAULT_COUNTRY=PE

# Zona horaria por defecto
REACT_APP_DEFAULT_TIMEZONE=America/Lima

# Moneda por defecto
REACT_APP_DEFAULT_CURRENCY=PEN

# Idioma por defecto
REACT_APP_DEFAULT_LANGUAGE=es

# Formato de fecha por defecto
REACT_APP_DATE_FORMAT=DD/MM/YYYY

# ============================================================================
# CONFIGURACIÓN DE DESARROLLO
# ============================================================================

# Puerto de desarrollo (opcional, por defecto 3000)
PORT=3000

# Habilitar hot reload
FAST_REFRESH=true

# Mostrar warnings de ESLint
ESLINT_NO_DEV_ERRORS=false

# ============================================================================
# EJEMPLOS DE CONFIGURACIÓN POR ENTORNO
# ============================================================================

# DESARROLLO LOCAL
# REACT_APP_API_URL=http://localhost:8000
# REACT_APP_ENVIRONMENT=development
# REACT_APP_DEBUG=true

# STAGING
# REACT_APP_API_URL=https://api-staging.intelligastro.com
# REACT_APP_ENVIRONMENT=staging
# REACT_APP_DEBUG=false

# PRODUCCIÓN
# REACT_APP_API_URL=https://api.intelligastro.com
# REACT_APP_ENVIRONMENT=production
# REACT_APP_DEBUG=false
# HTTPS=true
# REACT_APP_CSP_ENABLED=true

# ============================================================================
# NOTAS IMPORTANTES
# ============================================================================

# 1. Solo las variables que comienzan con REACT_APP_ son visibles en el cliente
# 2. No incluir información sensible (passwords, keys secretas) en estas variables
# 3. Reiniciar el servidor de desarrollo después de cambiar estas variables
# 4. Este archivo (.env.example) debe ser versionado, pero .env NO
# 5. Crear diferentes archivos para diferentes entornos:
#    - .env.local (desarrollo local)
#    - .env.staging (staging)
#    - .env.production (producción)

ESLINT_NO_DEV_ERRORS=true