{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/core/*": ["core/*"],
      "@/shared/*": ["shared/*"],
      "@/features/*": ["features/*"],
      "@/ui/*": ["ui/*"],
      "@/assets/*": ["assets/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}